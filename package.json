{
  "name": "sicredi-test",
  "version": "0.1.0",
  "author": "Uriel",
  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "moment": "^2.29.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-loadable": "^5.5.0",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.5",
    "reselect": "^4.0.0",
    "store": "^2.0.12",
    "styled-components": "^4.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll --verbose",
    "coverage": "react-scripts test --watchAll --coverage",
    "deploy:clear": "cross-env rm -rf /.build",
    "deploy:build": "react-scripts build",
    "deploy:surge": "node_modules/.bin/surge --project ./build --domain sicredi-teste.surge.sh",
    "deploy": "cross-env run-s deploy:clear deploy:build deploy:surge"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 5 chrome version",
      "last 5 firefox version",
      "last 5 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*/ducks/*/*.js",
      "src/*/sagas/*/*.js",
      "src/components/*/*.js",
      "src/helpers/*/*.js"
    ]
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.17.0",
    "babel-plugin-macros": "^2.6.1",
    "babel-plugin-styled-components": "^1.10.6",
    "cross-env": "^5.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "redux-devtools-extension": "^2.13.8",
    "surge": "^0.21.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env CI=true react-scripts test && npm run deploy"
    }
  }
}
